{
  "manifest_version": 3,
  "name": "智能文本助手",
  "version": "1.0.0",
  "description": "提供文本解释、翻译、朗读、润色功能的Chrome插件",
  "permissions": [
    "activeTab",
    "tts"
  ],
  "host_permissions": [
    "https://api.moonshot.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "智能文本助手"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
